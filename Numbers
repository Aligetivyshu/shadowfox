#Task3(numbers)
# Task 1
def format_number(number, representation):
    formatted = format(number, representation)
    return f"The number {number} in '{representation}' format is: {formatted}"
result = format_number(145, 'o')
print(result)


#Task 2
pi = 3.14
radius = 84
water_per_sq_meter = 1.4
area = pi * (radius ** 2)
total_water = area * water_per_sq_meter
print("Total amount of water in the pond (liters):", int(total_water))



#Task 3
distance_meters = 490
time_minutes = 7
time_seconds = time_minutes * 60  
speed = distance_meters / time_seconds
print("Speed (m/s):", int(speed))
