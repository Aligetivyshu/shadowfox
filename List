#Task2(list)
justice_league = ["Superman", "Batman", "Wonder Woman", "Flash", "Aquaman", "Green Lantern"]
print("Step 1 - Initial list:")
print(justice_league)
print("Number of members:", len(justice_league))
justice_league.append("Batgirl")
justice_league.append("Nightwing")
print("\nStep 2 - After adding Batgirl and Nightwing:")
print(justice_league)
justice_league.remove("Wonder Woman")
justice_league.insert(0, "Wonder Woman")
print("\nStep 3 - After making Wonder Woman the leader:")
print(justice_league)
justice_league.remove("Superman")  
flash_index = justice_league.index("Flash")
aquaman_index = justice_league.index("Aquaman")
if aquaman_index < flash_index:
    justice_league.insert(flash_index, "Superman")
else:
    justice_league.insert(aquaman_index, "Superman")
print("\nStep 4 - After separating Aquaman and Flash with Superman:")
print(justice_league)
justice_league = ["Cyborg", "Shazam", "Hawkgirl", "Martian Manhunter", "Green Arrow"]
print("\nStep 5 - After replacing with new team:")
print(justice_league)
justice_league.sort()
print("\nStep 6 - After sorting alphabetically:")
print(justice_league)
print("New Leader:", justice_league[0])

